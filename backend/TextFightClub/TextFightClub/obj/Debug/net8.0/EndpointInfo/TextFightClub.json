{
  "openapi": "3.0.1",
  "info": {
    "title": "TextFightClub API",
    "description": "API for AI text battle between two bots",
    "version": "v1"
  },
  "paths": {
    "/api/Fight/battle": {
      "post": {
        "tags": [
          "Fight"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FightRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/FightRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/FightRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FightRequest": {
        "type": "object",
        "properties": {
          "subject": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}